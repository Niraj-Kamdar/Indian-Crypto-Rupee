              <label for="username">Username :</label>
              <br />
              <input type="text" name="username" class="btn-new bg-2" />
              <br />
              <br />
              <label for="password">Password :</label>
              <br />
              <input type="password" name="password" class="btn-new bg-2" />
              <br />
              <br />
            </div>
            <button class="btn-new bg-2 mb-2">Go to Dashboard</button>
          </form>
        </div>
      </form>
      </div>
    </div>
